{
    "name": "sanmai/shipandco-sdk",
    "description": "Ship&co API SDK",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "shipping provider",
        "PHP SDK",
        "delivery"
    ],
    "authors": [
        {
            "name": "Alexey Kopytko",
            "email": "alexey@kopytko.com",
            "homepage": "https://www.alexeykopytko.com",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/sanmai/shipandco-sdk/issues"
    },
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^6.3 || ^7.0",
        "jms/serializer": "^3.9",
        "psr/log": "^1.1",
        "sanmai/json-serializer": "^0.1.1 || ^0.2.4",
        "sanmai/pipeline": "^5 || ^6",
        "sanmai/sdk-common": "^0.5.2",
        "sanmai/version-info": "^0.2.0",
        "symfony/http-foundation": "^4.4.7 || ^5.0.7"
    },
    "require-dev": {
        "doctrine/cache": "<2",
        "ergebnis/composer-normalize": ">=2.23",
        "friendsofphp/php-cs-fixer": "^3",
        "infection/infection": ">=0.16",
        "laravel/framework": "^6.20.26 || ^8.40",
        "phan/phan": "^1 <1.3 || >1.3.0",
        "php-coveralls/php-coveralls": "^2.4.1",
        "phpstan/phpstan": ">=0.10",
        "phpunit/phpunit": "^9.3",
        "vimeo/psalm": ">=3.0.16"
    },
    "conflict": {
        "doctrine/annotations": "<1.10.3"
    },
    "suggest": {
        "doctrine/cache": "For metadata caching",
        "monolog/monolog": "For advanced logging and debugging"
    },
    "autoload": {
        "psr-4": {
            "ShipAndCoSDK\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\ShipAndCoSDK\\": "tests/",
            "CommonSDK\\Tests\\Common\\": "vendor/sanmai/sdk-common/tests/Common/"
        }
    },
    "config": {
        "allow-plugins": true,
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-main": "0.1.x-dev"
        }
    }
}
